<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="99dp"
        android:layout_height="74dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/baseline_person_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="229dp"
        android:layout_height="34dp"
        android:layout_marginTop="25dp"
        android:id="@+id/viewname"
        android:text="...."
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/viewemail"
        android:layout_width="229dp"
        android:layout_height="34dp"
        android:layout_marginTop="25dp"
        android:text="...."
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewname" />

    <TextView
        android:id="@+id/viewphone"
        android:layout_width="229dp"
        android:layout_height="34dp"
        android:layout_marginTop="25dp"
        android:text="...."
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewemail" />


    <Button
        android:id="@+id/editdata"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:text="Edit personal data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewphone" />

    <Button
        android:id="@+id/removeaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="removeaccount"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editdata" />

</androidx.constraintlayout.widget.ConstraintLayout>